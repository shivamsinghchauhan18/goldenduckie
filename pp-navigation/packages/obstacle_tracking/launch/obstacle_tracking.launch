<launch>
  <arg name="veh" default="$(env VEHICLE_NAME)"/>
  <arg name="pkg_name" default="obstacle_tracking"/>
  <arg name="node_name" default="obstacle_tracking_node"/>
  <arg name="alpha" default="0.5"/>
  <arg name="association_radius" default="0.15"/>
  <arg name="max_age" default="1.0"/>
  <arg name="min_hits" default="1"/>

  <group ns="$(arg veh)">
    <node pkg="$(arg pkg_name)" type="$(arg node_name).py" name="$(arg node_name)" output="screen" required="true">
      <!-- Inputs/Outputs -->
      <remap from="obstacle_tracking_node/obslist_in" to="ground_projection/obslist_out"/>
      <remap from="obstacle_tracking_node/obslist_tracked" to="obstacle_tracking/obslist_tracked"/>

      <!-- Params -->
      <param name="alpha" value="$(arg alpha)"/>
      <param name="association_radius" value="$(arg association_radius)"/>
      <param name="max_age" value="$(arg max_age)"/>
      <param name="min_hits" value="$(arg min_hits)"/>
    </node>
  </group>
</launch>
